<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <ImageView
        android:id="@+id/iv_add_lure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/toolbar_styl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/rg_add_lure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Воблер"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Силікон"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Блешня"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp">
        </TextView>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_add_lure"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toBottomOf="@+id/iv_add_lure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_add_lure">

        <RadioButton
            android:id="@+id/rb_add_vobbler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="28dp">

        </RadioButton>

        <RadioButton
            android:id="@+id/rd_add_silikon"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp">

        </RadioButton>

        <RadioButton
            android:id="@+id/rd_add_spoon"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp">

        </RadioButton>
    </RadioGroup>

    <TextView
        android:id="@+id/tv_name_lure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Виробник"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintTop_toBottomOf="@+id/iv_add_lure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <EditText
        android:id="@+id/et_add_name_lure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_lure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

    </EditText>
    <TextView
        android:id="@+id/tv_name_lure_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Модель"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintTop_toBottomOf="@+id/et_add_name_lure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <EditText
        android:id="@+id/et_add_name_model_lure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_lure_model">

    </EditText>

    <TextView
        android:id="@+id/tv_name_lure_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Фото"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintTop_toBottomOf="@+id/et_add_name_model_lure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/iv_add_lure_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/vobbler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_lure_image"
        app:layout_constraintBottom_toBottomOf="@+id/id_layout">

    </ImageView>

    <LinearLayout
        android:id="@+id/id_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_add_lure_image"
        android:orientation="horizontal"
        android:background="@color/cardview_dark_background">
<Button
    android:id="@+id/bt_cancel_save_lure"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Відміна">

</Button>
        <Button
            android:id="@+id/bt_save_lure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Зберегти">

        </Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>